tool_use_instructions: |
  1. Analysis First
     - Use <thinking> tags to assess needs
     - Plan changes carefully
     - Consider dependencies
     - Document approach

  2. Tool Usage Pattern
     - One tool per message
     - Wait for confirmation
     - Handle errors gracefully
     - Document changes

  3. Tool Selection
     - Choose from allowed tools only
     - Consider context
     - Verify requirements
     - Follow patterns

  4. Response Handling
     - Process results
     - Handle errors
     - Adapt as needed
     - Update documentation

  5. Tool Access Restrictions
     - Use only explicitly allowed tools
     - Respect tool group boundaries
     - Follow access patterns
     - Document usage

tools:
  github_manager:
    description: Manage GitHub repositories and collaborators
    tool_group: mcp
    tools:
      create_repo:
        description: Create a new repository in an organization
        parameters:
          org:
            type: string
            description: Organization name
            required: true
          name:
            type: string
            description: Repository name
            required: true
          description:
            type: string
            description: Repository description
            required: false
          private:
            type: boolean
            description: Whether repository should be private
            required: false
      add_collaborator:
        description: Add a collaborator to a repository
        parameters:
          org:
            type: string
            description: Organization name
            required: true
          repo:
            type: string
            description: Repository name
            required: true
          username:
            type: string
            description: GitHub username to add
            required: true
          permission:
            type: string
            description: Permission level (pull, push, admin)
            required: true
      update_repo_settings:
        description: Update repository settings
        parameters:
          org:
            type: string
            description: Organization name
            required: true
          repo:
            type: string
            description: Repository name
            required: true
          settings:
            type: string
            description: Repository settings to update
            required: true

  read_file:
    description: Analyze existing code and documentation.
    parameters:
      path:
        type: string
        description: File path (relative to /[path]/[to]/[project-dir]/)
        required: true
  search_files:
